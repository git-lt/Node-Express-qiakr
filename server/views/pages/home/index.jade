block script
	script(src="http://static.qiakr.com/source/video/video.min.js")
	script.
		Utils.realseHeader();

		var v = videojs('#videoAbout');
		
		$('#btnPlayVideo').on('click',function(){
			$('#videoWrap').addClass('active');
			setTimeout(function(){
		    	$('#videoAbout').addClass('active');
		    	v.ready(function(){this.play();});
			}, 100)
		})
		$('#btnVideoClose').on('click',function(){
			videojs('#videoAbout').pause();
			$('#videoAbout').removeClass('active');
			setTimeout(function(){$('#videoWrap').removeClass('active');}, 200)
		})
		if(Utils.getCookie('play')!=='1'){
			$('#btnPlayVideo').trigger('click');
			setTimeout(function(){videojs('#videoAbout').play();},1000);
			Utils.setCookie('play','1',365);
		}
