doctype
html(lang="zh-CN")
    head
        meta(charset="utf-8")
        meta(name="viewport",content="width=device-width, initial-scale=1")
        title #{title}
        link(href="http://static.qiakr.com/admin/bootstrap.min.css",rel="stylesheet")
        style.
            .container {
                margin-top: 30px
            }
    body
        .container
            .row
                .alert.alert-danger
                    .row
                        .col-sm-12
                            h2 #{title}
                            pre
                                | #{message}&nbsp;&nbsp;
                    .row
                        .col-sm-12
                            .btn.btn-danger#backBtn(title="返回上一页") 返回上一页
                            span &emsp;
                            .btn.btn-default#refreshBtn(title="刷新重试") 刷新
    script(src="http://static.qiakr.com/plugins/jquery2.0.min.js")
    script(src="http://static.qiakr.com/plugins/bootstrap.min.js")
    script.
        $('#backBtn').on('click', function () {
            history.go(-1);
        });

        $('#refreshBtn').on('click', function () {
            history.go(0);
        });